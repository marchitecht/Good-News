<div class="row mt-3">
    <div class="col">
      
      <div class="d-flex flex-wrap justify-content-end bd-highlight mb-3">
        
        <div class="ps-2 pe-2 mt-1 ms-1 d-flex align-items-center bd-highlight rounded-pill bg-secondary text-white bg-opacity-50">Спорт<button type="button" class="ms-2 btn-close" aria-label="Close"></button></div>
        <div class="ps-2 pe-2 mt-1 ms-1 d-flex align-items-center bd-highlight rounded-pill bg-secondary text-white bg-opacity-50">Новости технологий<button type="button" class="ms-2 btn-close" aria-label="Close"></button></div>
        <div class="ps-2 pe-2 mt-1 ms-1 d-flex align-items-center bd-highlight rounded-pill bg-secondary text-white bg-opacity-50">Космос<button type="button" class="ms-2 btn-close" aria-label="Close"></button></div>
        <div class="ps-2 pe-2 mt-1 ms-1 d-flex align-items-center bd-highlight rounded-pill bg-secondary text-white bg-opacity-50">Общество<button type="button" class="ms-2 btn-close" aria-label="Close"></button></div>
